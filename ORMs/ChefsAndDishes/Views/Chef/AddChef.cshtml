@model Chef

<a asp-controller="Chef" asp-action="Index">Chefs</a>
|
<a asp-controller="Dish" asp-action="AllDishes">Dishes</a>
|
<a asp-controller="Chef" asp-action="AddChef">Add a Chef</a>
|
<a asp-controller="Dish" asp-action="AddDish">Add a Dish</a>
<div class="container w-75 mx-auto">

    <h1>Add a Chef</h1>

    <form asp-action="CreateChef" asp-controller="Chef" method="post" class="shadow p-3 rounded">
        <div>
            <div class="mb-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" type="text" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" type="text" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger font-weight-bold"></span>
            </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>

</div>
