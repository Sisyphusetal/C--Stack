@{
    ViewData["Title"] = "One Dish Page";
}

@model Dish
<div class="text-center">
    <h1 class="display-4">Welcome to @ViewData["Title"]</h1>
    <h3><a asp-controller="Home" asp-action="Index">Home</a></h3>
    <h2>@Model.Name</h2>
    <h3>@Model.Description</h3>
    <h4>Tastiness: @Model.Tastiness</h4>
    <h4>Calories: @Model.Calories</h4>

    <a asp-controller="Home" asp-action="EditDish" asp-route-id="@Model.DishId" class="btn btn-outline-warning mt-3">Edit Post</a>
    <form asp-controller="Home" asp-action="DeleteDish" asp-route-id="@Model.DishId" class="btn mt-3">
        <button class="btn btn-outline-danger">Delete Post</button>
    </form>
</div>