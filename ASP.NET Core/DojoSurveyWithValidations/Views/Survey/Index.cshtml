@{
    ViewData["Title"] = "Info Page";
}



@model Survey
    <form action="process" method="post">
        <div>
            <label asp-for="Name">Your Name: </label>
            <input asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
    
        <div>
            <label asp-for="Location">Dojo Location: </label>
            <input asp-for="Location">
            <span asp-validation-for="Location"></span>
        </div>

        <div>
            <label asp-for="FavoriteLanguage">Favorite Language: </label>
            <input asp-for="FavoriteLanguage">
            <span asp-validation-for="FavoriteLanguage"></span>
        </div>

        <div>
            <label asp-for="Comments">Comments (optional):</label>
            <input asp-for="Comments">
            <span asp-validation-for="Comments"></span>
        </div>

        <button type="submit">Submit</button>
    </form>
